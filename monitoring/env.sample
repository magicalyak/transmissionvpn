# Monitoring Stack Configuration

# Grafana Configuration
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=admin
GRAFANA_ALLOW_SIGN_UP=false

# Prometheus Configuration
PROMETHEUS_RETENTION_TIME=200h
PROMETHEUS_SCRAPE_INTERVAL=15s

# InfluxDB2 Configuration
INFLUXDB_ADMIN_USERNAME=admin
INFLUXDB_ADMIN_PASSWORD=password123
INFLUXDB_ORG=transmissionvpn
INFLUXDB_BUCKET=metrics
INFLUXDB_TOKEN=my-super-secret-auth-token

# Transmission Configuration
TRANSMISSION_HOST=transmissionvpn
TRANSMISSION_PORT=9091
TRANSMISSION_USERNAME=
TRANSMISSION_PASSWORD=

# VPN Monitoring
HEALTH_CHECK_HOSTS=checkip.amazonaws.com,api.ipify.org,icanhazip.com

# Network Configuration
MONITORING_NETWORK=monitoring
TRANSMISSIONVPN_NETWORK=transmissionvpn_default

# Service Ports
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000
INFLUXDB_PORT=8086
TRANSMISSION_EXPORTER_PORT=19091
CADVISOR_PORT=8080
NODE_EXPORTER_PORT=9100
BLACKBOX_EXPORTER_PORT=9115

# Data Retention
METRICS_RETENTION_DAYS=30
LOG_RETENTION_DAYS=7

# Alert Configuration
ENABLE_ALERTS=true
ALERT_EMAIL=admin@example.com
SLACK_WEBHOOK_URL=
DISCORD_WEBHOOK_URL= 