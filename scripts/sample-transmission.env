# Sample Transmission Environment File
# Copy this to /opt/containerd/env/transmission.env and customize

# Container Configuration
CONTAINER_NAME=transmissionvpn
IMAGE_NAME=magicalyak/transmissionvpn:latest

# Network Configuration
HOST_PORT_WEB=9091
HOST_PORT_METRICS=9099
HOST_PORT_PEER=51413

# Transmission Configuration
TRANSMISSION_WEB_UI=flood
TRANSMISSION_DOWNLOAD_DIR=/downloads
TRANSMISSION_INCOMPLETE_DIR=/downloads/incomplete
TRANSMISSION_WATCH_DIR=/downloads/watch

# VPN Configuration
VPN_PROVIDER=PRIVADOVPN
VPN_CONFIG=atl-009.ovpn
VPN_USERNAME=your_vpn_username
VPN_PASSWORD=your_vpn_password

# Health Check Configuration (new in v4.0.6-r10)
VPN_HEALTH_REQUIRED=true
VPN_GRACE_PERIOD=300
HEALTH_CHECK_HOST=google.com

# Optional: Transmission Credentials
TRANSMISSION_RPC_USERNAME=admin
TRANSMISSION_RPC_PASSWORD=your_transmission_password

# Optional: Timezone
TZ=America/New_York

# Optional: User/Group IDs
PUID=1000
PGID=1000

# Volume Mounts
DOWNLOADS_PATH=/opt/transmission/downloads
CONFIG_PATH=/opt/transmission/config
WATCH_PATH=/opt/transmission/watch 